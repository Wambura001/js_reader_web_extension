{
    "manifest_version": 3,
    "name": "Highlight Reader",
    "description": "Reads highlighted text aloud.",
    "version": "0.1",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }